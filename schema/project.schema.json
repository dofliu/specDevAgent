{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "specDevAgent Project Metadata",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "description",
    "version",
    "agents",
    "documents"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable project name"
    },
    "description": {
      "type": "string",
      "description": "Short statement describing the problem and goal"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version that tracks the scaffold revision"
    },
    "agents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "role", "responsibilities"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "role": {
            "type": "string",
            "minLength": 1
          },
          "responsibilities": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "documents": {
      "type": "object",
      "required": ["project", "todo", "log"],
      "properties": {
        "project": {
          "type": "string",
          "description": "Path to the canonical project overview document"
        },
        "todo": {
          "type": "string",
          "description": "Path to the backlog document"
        },
        "log": {
          "type": "string",
          "description": "Path to the running development log"
        }
      },
      "additionalProperties": false
    }
  }
}
